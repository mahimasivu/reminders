<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Set Reminder</title>
  <!-- <link rel="stylesheet" href="styles.css"> -->
  <style>
    /* Styling for the form */
    body {
      background-attachment: fixed;
  overflow: hidden;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-image: linear-gradient(to right bottom, #270e93, #4350b6, #6e86d2, #a7bce6, #ecf1f8);
    }
    

    h1 {
      text-align: center;
    }

    form {
      max-width: 400px;
      margin: 0 auto;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"],
    textarea,
    input[type="datetime-local"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-bottom: 10px;
    }

    button {
      padding: 10px 20px;
      background-color:#12153a;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #0c154b;
    }
  </style>
  
</head>
<body>
  <h1>Set Reminder</h1>
  <form id="reminder-form" method="post" action="/">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title">

    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea>

    <label for="date">Date:</label>
    <input type="datetime-local" id="date" name="date">
    <button>SUBMIT</button>
    
  </form>
  <h1>Reminder List</h1>
  <% users.forEach(user => { %>
    <p>title<%= user.title %></p>

    <p>description: <%= user.description %></p>
    <hr>
  <% }); %>
</body>
</html>
